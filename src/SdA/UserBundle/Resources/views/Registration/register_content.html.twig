{% trans_default_domain 'FOSUserBundle' %}

<form id="register-form" action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class=" pure-form pure-form-stacked fos_user_registration_register">
    <fieldset>
        <legend>REGISTRATION</legend>
    <div class="pure-g-r">
    <div class="pure-u-1-2">
        {{ form_label(form.username) }}
        {{ form_errors(form.username) }}
        {{ form_widget(form.username) }}
    </div>

    <div class="pure-u-1-2">
        {{ form_label(form.email) }}
        {{ form_errors(form.email) }}
        {{ form_widget(form.email) }}
    </div>

        <div class="pure-u-1-2">
        {{ form_label(form.plainPassword.first) }}
        {{ form_errors(form.plainPassword.first) }}
        {{ form_widget(form.plainPassword.first) }}
    </div>

    <div class="pure-u-1-2">
        {{ form_label(form.plainPassword.second) }}
        {{ form_errors(form.plainPassword.second) }}
        {{ form_widget(form.plainPassword.second) }}
    </div>
{{ form_end(form) }}

    
    </div>
    
    <div>
        <br><input class="pure-button pure-button-primary" type="submit" value="{{ 'registration.submit'|trans }}" />
    </div>
    <br><span>Déjà inscrit ? <a id="go-to-login-form" href="{{ path('fos_user_security_login') }}">Loggez vous !</a></span>
    </fieldset>
</form>

